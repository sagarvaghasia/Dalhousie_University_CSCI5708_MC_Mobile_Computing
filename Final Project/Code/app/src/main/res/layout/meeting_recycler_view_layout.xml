<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/meetingCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#D30E0E"
        android:clipToPadding="true"
        android:elevation="@dimen/cardview_compat_inset_shadow"
        app:cardCornerRadius="4dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F2EDFA"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/meetingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Title:  "
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/meetingTitleValue"
                    android:layout_width="350dp"
                    android:layout_height="38dp"
                    android:text="Title"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/meetingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ScheduledDate:  "
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/meetingDateValue"
                    android:layout_width="350dp"
                    android:layout_height="38dp"
                    android:text="ScheduledDate"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/meetingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ScheduledTime:  "
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/meetingTimeValue"
                    android:layout_width="350dp"
                    android:layout_height="38dp"
                    android:text="ScheduledTime"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/meetingStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Status:  "
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/meetingStatusValue"
                    android:layout_width="350dp"
                    android:layout_height="38dp"
                    android:text="Status"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>