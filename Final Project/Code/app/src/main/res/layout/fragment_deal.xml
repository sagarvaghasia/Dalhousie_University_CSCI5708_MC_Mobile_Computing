<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragments.DealFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/agreementConditionsTextInput"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:hint="Enter agreement terms and conditions">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/terms_conditions_textInputEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_field_background" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/amountText"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:hint="Enter amount here"
        card_view:startIconDrawable="@drawable/ic_baseline_attach_money_16">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/amount_textInputEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_field_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/dealRejectedError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="This deal is rejected by user. Update the deal."
        android:textColor="@color/design_default_color_error" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_createDeal"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginBottom="170dp"
        android:text="Submit" />


</LinearLayout>